<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="images/edit.png" type="image/x-icon">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/fontawesome/css/all.min.css">
    <title>Edit Product</title>
    <style>
        .img {
            width: 230px;
            height: 230px;
            border-radius: 15px;
            margin-left: 50px;
        }
    </style>
</head>

<body>
    <div class="container-fluid ">
        <%- include('../inc/menu') %>

        <div class="row mt-3 ms-2">
            <h2>Edit Product</h2>
        </div>
        <hr>

        <div class="container">
            <!-- edit form column -->
            <div class="row col-12 mt-4" style="justify-content: center;">
                
                <form method="post" enctype="multipart/form-data" class="row d-flex p-1 col-8" style="border-radius: 10px;">
                    
                    <div class="col-5 p-2 mt-4">
                        <img class="img border" src="<%= objSP.image %>" alt="">
                        <div class="mt-3 mb-2">
                            <input type="file" class="form-control" name="file_img_edit" aria-describedby="fileHelpId">
                        </div>
                    </div>

                    <div class="col-7">
                        <label for="Name" class="form-label">Tên sản phẩm</label>
                        <div class="row col-12 mb-2">
                            <div class="col-9">
                                <input type="text" class="form-control" name="tensp" value="<%= objSP.tensp %>">
                            </div>
                            <select class="col-3" name="theloai" style="font-size: 15px;">
                                <% listTL.forEach( row => {
                                    let selected = '';// xác định thể loại đã chọn của sp
                                    if( String( row._id ) == String( row.id_theloai ) ){
                                        selected = 'selected';
                                    }
                                    %>
                                    <option value="<%= row._id %>"><%= row.name %></option>
                                <% }) %>
                            </select>
                        </div>

                        <div class="mb-2" style="width: 463px;">
                            <label for="Price" class="form-label">Giá</label>
                            <input type="number" class="form-control" name="giasp" value="<%= objSP.giasp %>">
                        </div>

                        <div class="mb-2" style="width: 463px;">
                            <label for="Price" class="form-label">Tồn kho</label>
                            <input type="number" class="form-control" name="tonkho" value="<%= objSP.tonkho %>">
                        </div>

                        <div class="mb-2 col-12">
                            <label for="Content" class="form-label col-8">Mô tả</label>
                            <textarea class="p-2" name="mota" cols="58" rows="3"><%= objSP.mota %></textarea>
                        </div>
                        
                    </div>

                    <div class="col-12 mt-4 mb-2 text-center">
                        <button type="submit" style="border-radius: 25px;" class="btn btn-primary col-2">Lưu</button>
                    </div>

                </form>

            </div>
        </div>
            
    </div>




    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>

</html>