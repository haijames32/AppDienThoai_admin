<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Staff</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/fontawesome/css/all.min.css">
    <style>
        .img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
        }
    </style>
</head>

<body>
    <div class="container-fluid ">
        <%- include('../inc/menu') %>

            <div class="row mt-3 ms-2">
                <h2>Edit Staff</h2>
            </div>
            <hr>

            <div class="container">
                <div class="row col-12 mt-1 justify-content-center">
                    <div class="col-2">
                        <img class="img" src="../../images/avtnam.png" alt="">
                    </div>
                </div>
            </div>

            <div class="container">
                <div class="row col-12 mt-1 justify-content-center">
                    <div class="col-12 text-center">
                        <span class="col-12">
                            <%= msg %>
                        </span>
                    </div>

                    <form method="post" class="row col-6 p-2 justify-content-center">

                        <div class="d-flex col-7 mt-3 align-items-center">
                            <div class="col-3 text-end">
                                <label for="name" class="form-label">Họ tên:</label>
                            </div>
                            <div class="col-6 ms-1">
                                <input type="text" style="width: 165px;" class="form-control" name="fullname" value="<%= objStaff.fullname %>">
                            </div>
                            <select class="col-3" name="gender">
                                <% listGender.forEach( row=> { %>
                                    <option value="<%= row._id %>">
                                        <%= row.name %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>

                        <!-- <div class="d-flex col-7 mt-3">
                            <div class="col-3 text-end">
                                <label for="name" class="form-label">Username:</label>
                            </div>
                            <div class="col-9 ms-1">
                                <input type="text" class="form-control" name="username" value="<%= objStaff.username %>">
                            </div>
                        </div> -->

                        <div class="d-flex col-7 mt-3">
                            <div class="col-3 text-end">
                                <label for="name" class="form-label">Điện thoại:</label>
                            </div>
                            <div class="col-9 ms-1">
                                <input type="number" class="form-control" name="phone" value="0<%= objStaff.phone %>">
                            </div>
                        </div>

                        <div class="col-12 mt-3 mb-2 text-center">
                            <button type="submit" style="border-radius: 10px; background-color: #145DA0; color: white;" class="btn btn-primary col-2">Lưu</button>
                        </div>

                    </form>
                </div>


            </div>
    </div>


    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>

</html>