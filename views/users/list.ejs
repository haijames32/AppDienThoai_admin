<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/fontawesome/css/all.min.css">
    <title>User</title>
</head>

<body>
    <div class="container-fluid">
        <%- include('../inc/menu') %>

            <div class="row mt-3 ms-2">
                <h2>List User</h2>
            </div>
            <hr>


            <div class="row col-12" style="margin-bottom: 50px;">

                <div class="col-7">
                    <div class="table-responsive border" style=" border-radius: 10px;">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col" class="col-1" style="text-align: center">STT</th>
                                    <th scope="col" class="text-start col-3">Fullname</th>
                                    <th scope="col" class="text-start col-3">Phone</th>
                                    <th scope="col" class="col-2">Email</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% listU.forEach( (objU,index)=> { %>
                                    <tr>
                                        <td style="text-align: center; font-weight: bold; vertical-align: middle">
                                            <%= index + 1 %>
                                        </td>
                                        <td style="vertical-align: middle;">
                                            <a class="detailTen" style="text-decoration: none; color: black;">
                                                <%= objU.fullname %>
                                            </a>
                                        </td>
                                        <td style="vertical-align: middle">
                                            0<%= objU.phone %>
                                        </td>
                                        <td>
                                            <%= objU.email %>
                                        </td>
                                        <td style="text-align: center; vertical-align: middle">
                                            <a href="users/detail/<%= objU._id %>"><i
                                                    class="fa-sharp fa-solid fa-circle-info"
                                                    style="color: black;"></i></a>
                                        </td>
                                    </tr>
                                    <% }); %>
                        </table>
                    </div>
                </div>


            </div>
            <hr>
            <%- include('../inc/footer') %>
    </div>




    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>

</html>